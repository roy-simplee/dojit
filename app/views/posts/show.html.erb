<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>

<h1><%= @post.markdown_title %></h1>
<small>
  <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
  submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
</small>

<p><%= @post.markdown_body %></p><br />
<%= link_to "Edit", edit_topic_post_comment_path(@topic, @post), class: 'btn btn-success' if policy(@post).edit? %>
<%= link_to "Delete post", [@topic, @post], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } if policy(@post).destroy? %>
<%= render partial: @comments %>
<%= will_paginate @comments %>
<%= render partial: 'comments/form', locals: { topic: @topic, post: @post } if current_user%>
